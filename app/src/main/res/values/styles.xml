<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myEditTextLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/selector_text_input_box_stroke</item>
        <item name="android:textColorHint">@color/textHintColor</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="myEditTextLayoutSignUp" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/selector_text_input_box_stroke_sign_up</item>
        <item name="android:textColorHint">@color/catskillWhite</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/catskillWhite</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="myCustomEditText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="commonButtonAuthFlow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="commonButtonCornerMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/bg_selector_button_common_auth</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="commonButtonCornerSecond">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/bg_rectangle_grey_radius_6dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CheckboxCheckedColorStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorSecondary">@color/textHintColor</item>
    </style>

    <style name="buttonMapStyle">
        <item name="android:background">@drawable/bg_rectangle_green_radius_6dp</item>
    </style>

    <style name="customDialog">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>
</resources>
