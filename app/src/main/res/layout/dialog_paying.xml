<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.example.roomrentalapplication.ui.request.send_request.PayingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_32dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_common_dialog_round_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8dp"
                android:src="@drawable/ic_close_local"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/ivPaying"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginTop="45dp"
                android:src="@drawable/ic_paying"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/linearContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_16dp"
                android:orientation="vertical"
                android:padding="@dimen/_8dp"
                app:layout_constraintTop_toBottomOf="@id/ivPaying">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:background="@color/textDim" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_8dp">

                    <ImageView
                        android:id="@+id/ivAvatarLandlord"
                        bindImageAvatar="@{data.stateCustomerProperty.customerId}"
                        android:layout_width="@dimen/_48dp"
                        android:layout_height="@dimen/_48dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tvNameLandlord"
                        bindTextUserName="@{data.stateCustomerProperty.customerName}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8dp"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toTopOf="@id/tvLandlord"
                        app:layout_constraintStart_toEndOf="@id/ivAvatarLandlord"
                        app:layout_constraintTop_toTopOf="@id/ivAvatarLandlord"
                        tools:text="Jenny Wilson" />

                    <TextView
                        android:id="@+id/tvLandlord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/v1_landlord"
                        app:layout_constraintBottom_toBottomOf="@id/ivAvatarLandlord"
                        app:layout_constraintStart_toStartOf="@id/tvNameLandlord"
                        app:layout_constraintTop_toBottomOf="@id/tvNameLandlord" />

                    <ImageView
                        android:id="@+id/ivPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8dp"
                        android:src="@drawable/ic_outline_phone_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/ivMess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_32dp"
                        android:src="@drawable/ic_baseline_message_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ivPhone"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ContentDescription" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:background="@color/textDim" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnSection"
                invisibleUnless="@{data.stateVisibleButton}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/linearContact"
                app:layout_constraintRight_toRightOf="@id/linearContact"
                app:layout_constraintTop_toBottomOf="@id/linearContact">

                <Button
                    android:id="@+id/btnCancel"
                    style="@style/commonButtonCornerSecond"
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:backgroundTint="@color/tango"
                    android:text="@string/v1_cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/payPalButton"
                    style="@style/commonButtonCornerMain"
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="14dp"
                    android:text="@string/v1_pay_now"
                    android:textAllCaps="false" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
