<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.example.roomrentalapplication.data.remote.api.model.property.PropertyItem" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8dp"
        app:cardCornerRadius="@dimen/_8dp"
        app:cardElevation="@dimen/_3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="@dimen/_0dp"
                app:layout_constraintDimensionRatio="2:1.3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivTop"
                    loadImageUri="@{data.images.get(0).url}"
                    setShimmer="@{data.propertyName}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="-1dp"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription" />

            </androidx.cardview.widget.CardView>

            <include
                layout="@layout/layout_rating_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8dp"
                app:data="@{data.rating}"
                app:layout_constraintBottom_toBottomOf="@id/cvTop"
                app:layout_constraintStart_toStartOf="@id/cvTop" />

            <TextView
                android:id="@+id/tvMainItem"
                setShimmer="@{data.propertyName}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:lines="2"
                android:text="@{data.propertyName}"
                android:textAlignment="center"
                android:textColor="@color/blackRussian"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/cvTop"
                app:layout_constraintStart_toStartOf="@id/cvTop"
                app:layout_constraintTop_toBottomOf="@id/cvTop"
                tools:text="Selected Student" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</layout>
