<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="24dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvBestPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:letterSpacing="0.01"
                android:text="@string/v1_find_the_best_place"
                android:textColor="@color/blackRussian"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearSearch"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_image_button_filter"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                app:layout_constraintBottom_toBottomOf="@id/ivFilter"
                app:layout_constraintEnd_toStartOf="@id/ivFilter"
                app:layout_constraintStart_toStartOf="@id/tvBestPlace"
                app:layout_constraintTop_toBottomOf="@id/tvBestPlace">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location"
                    app:tint="@color/pinkSwan"
                    tools:ignore="ContentDescription" />

                <EditText
                    android:id="@+id/edtSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@color/transparent"
                    android:hint="@string/v1_start_entering_the_address"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textCursorDrawable="@null"
                    tools:ignore="LabelFor" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/bg_image_button_filter"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp"
                android:src="@drawable/ic_filter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linearSearch"
                app:tint="@color/pinkSwan"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvLifeStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:letterSpacing="0.01"
                android:text="@string/v1_find_the_apartment_that_fits_your_lifestyle"
                android:textColor="@color/blackRussian"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearSearch" />

            <TextView
                android:id="@+id/tvSolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/v1_we_have_a_solution_for_every_needs"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/tvLifeStyle"
                app:layout_constraintTop_toBottomOf="@id/tvLifeStyle" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/tvSolution"
                app:layout_constraintTop_toBottomOf="@id/tvSolution" />

            <TextView
                android:id="@+id/tvPopularCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:letterSpacing="0.01"
                android:text="@string/v1_discover_our_most_popular_cities"
                android:textColor="@color/blackRussian"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvFirst" />

            <TextView
                android:id="@+id/tvBestSolution"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/v1_the_best_solutions_in_the_coolest_cities_you_just_have_to_make_a_reservation"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvPopularCity"
                app:layout_constraintTop_toBottomOf="@id/tvPopularCity" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/tvBestSolution"
                app:layout_constraintTop_toBottomOf="@id/tvBestSolution" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
