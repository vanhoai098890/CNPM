<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.example.roomrentalapplication.ui.request.send_request.SendRequestViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.request.send_request.SendRequestFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSendRequest"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/layoutNoResult"
            android:visibility="gone"
            layout="@layout/layout_no_result" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
